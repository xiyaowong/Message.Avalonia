<ResourceDictionary
    x:ClassModifier="internal"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:msgHost="clr-namespace:Message.Avalonia.UI.Host">
    <Design.PreviewWith>
        <msgHost:MessageHost />
    </Design.PreviewWith>

    <x:Double x:Key="MessagePanelSpacing">10</x:Double>

    <ControlTheme TargetType="msgHost:MessageHost" x:Key="MessageHostTheme">
        <Setter Property="Margin" Value="12" />
        <Setter Property="Template">
            <ControlTemplate>
                <ReversibleStackPanel Name="PART_Items" Spacing="{StaticResource MessagePanelSpacing}" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme
        BasedOn="{StaticResource MessageHostTheme}"
        TargetType="msgHost:MessageHost"
        x:Key="{x:Type msgHost:MessageHost}" />
</ResourceDictionary>