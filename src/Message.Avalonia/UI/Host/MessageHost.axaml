<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:msgHost="clr-namespace:Message.Avalonia.UI.Host"
                    x:ClassModifier="internal">
    <Design.PreviewWith>
        <msgHost:MessageHost />
    </Design.PreviewWith>

    <x:Double x:Key="MessagePanelSpacing">10</x:Double>

    <ControlTheme x:Key="MessageHostTheme" TargetType="msgHost:MessageHost">
        <Setter Property="Margin" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <ReversibleStackPanel Name="PART_Items" Spacing="{StaticResource MessagePanelSpacing}" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type msgHost:MessageHost}"
                  BasedOn="{StaticResource MessageHostTheme}"
                  TargetType="msgHost:MessageHost" />
</ResourceDictionary>