<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:host="clr-namespace:Message.Avalonia.Controls.Host"
                    x:ClassModifier="internal">
    <Design.PreviewWith>
        <host:MessageHost />
    </Design.PreviewWith>

    <x:Double x:Key="MessagePanelSpacing">10</x:Double>

    <ControlTheme x:Key="MessageHostTheme" TargetType="host:MessageHost">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <ScrollViewer Name="PART_Container" Margin="4">
                    <ReversibleStackPanel Name="PART_Items" Spacing="{StaticResource MessagePanelSpacing}" Margin="8" />
                </ScrollViewer>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type host:MessageHost}"
                  BasedOn="{StaticResource MessageHostTheme}"
                  TargetType="host:MessageHost" />
</ResourceDictionary>